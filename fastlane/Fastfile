default_platform(:ios)

platform :ios do
  desc "Run tests on simulator"
  lane :test do
    scan(
      scheme: "All Tests",
      devices: ["iPhone 15 Pro"], # Altere para o simulador desejado
      clean: true,
      workspace: "Similarity.xcworkspace",
      destination: "platform=iOS Simulator,name=iPhone 15 Pro,OS=latest"
    )
  end
end
